<%= form_for @achievement, :html => { :class => "form-horizontal achievement" } do |f| %>

    <% if @achievement.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@achievement.errors.count, "error") %> prohibited this achievement from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @achievement.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@achievement[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :condition_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :condition_id, :class => 'form-control' %>
    </div>
    <%= error_span(@achievement[:condition_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%= error_span(@achievement[:number]) %>
  </div>
  <div class="control-group">
    <%= f.label :memo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :memo, :class => 'form-control' %>
    </div>
    <%= error_span(@achievement[:memo]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            achievements_path, :class => 'btn btn-default' %>

<% end %>
