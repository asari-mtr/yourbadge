<%- model_class = Achievement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @achievement.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:condition_id) %>:</strong></dt>
  <dd><%= @achievement.condition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @achievement.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memo) %>:</strong></dt>
  <dd><%= @achievement.memo %></dd>
</dl>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
<div class="row">
    <div class="col-xs-2 col-md-2">
        <div class="thumbnail">
            <%= image_tag "bronze_#{@achievement.condition.image_name}.png" if @medal.bronze %>
            <%= image_tag "silver_#{@achievement.condition.image_name}.png" if @medal.silver %>
            <%= image_tag "gold_#{@achievement.condition.image_name}.png" if @medal.gold %>
            <%= image_tag "none.png" if @medal.none %>
        </div>
    </div>
</div>
</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              achievements_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_achievement_path(@achievement), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              achievement_path(@achievement),
             :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
