<%- model_class = Archivement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @archivement.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:condition_id) %>:</strong></dt>
  <dd><%= @archivement.condition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @archivement.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memo) %>:</strong></dt>
  <dd><%= @archivement.memo %></dd>
</dl>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
<div class="row">
        <% 10.times do |i| %>
    <div class="col-xs-2 col-md-2">
        <div class="thumbnail">
            <%= image_tag 'bronze_toeic.png' if @medal.bronze %>
            <%= image_tag 'silver_toeic.png' if @medal.silver %>
            <%= image_tag 'gold_toeic.png' if @medal.gold %>
        </div>
    </div>
        <% end %>
</div>
</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              archivements_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_archivement_path(@archivement), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              archivement_path(@archivement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
